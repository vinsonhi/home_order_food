.container {
  padding: 20px;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.total {
  text-align: right;
  padding: 20px;
  font-size: 18px;
  font-weight: bold;
}

.submit-btn {
  background-color: #e64340;
  color: #fff;
}

.success-message {
  text-align: center;
  margin-top: 20px;
  font-size: 18px;
  color: #09bb07;
}

.cart-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #FFF6F6;
  padding-bottom: 120rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin: 40rpx 0 60rpx;
}

/* 购物车列表样式 */
.cart-list {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.clear-cart {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
}

.clear-cart text {
  margin-left: 8rpx;
}

.cart-items {
  padding: 20rpx 0;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

/* 备注区域样式 */
.remark-section {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 提交按钮样式 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 自定义按钮样式 - 覆盖Vant默认按钮样式 */
.order-btn {
  width: 100%;
  height: 90rpx !important;
  border-radius: 45rpx !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  letter-spacing: 2rpx;
  background: linear-gradient(to right, #FF7A9E, #FF5777) !important;
  border: none !important;
  box-shadow: 0 10rpx 20rpx rgba(255, 87, 119, 0.3) !important;
}

/* 自定义按钮加载状态 */
.order-btn-loading {
  opacity: 0.9 !important;
}

/* 自定义Toast样式 */
.custom-toast {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%) translateY(-100rpx);
  background-color: rgba(70, 70, 70, 0.9);
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  z-index: 1000;
  opacity: 0;
  transition: all 0.3s;
}

.custom-toast.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  padding: 10rpx;
}

.icon-home {
  font-size: 40rpx;
  color: #666;
}

.title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shop-btn {
  background: linear-gradient(to right, #FF7A9E, #FF5777);
  color: #fff;
  font-size: 30rpx;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 87, 119, 0.3);
}

/* 购物车内容样式 */
.cart-content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.cart-title {
  font-size: 34rpx;
  font-weight: 500;
}

.clear-btn {
  font-size: 28rpx;
  color: #999;
}

/* 购物车列表样式 */
.cart-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f6f6f6;
}

.cart-item:last-child {
  border-bottom: none;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.dish-count {
  display: flex;
  align-items: center;
  align-self: flex-end;
}

.count-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  font-size: 28rpx;
}

.count-btn.minus {
  color: #999;
}

.count-btn.plus {
  background: linear-gradient(to right, #FF7A9E, #FF5777);
  color: #fff;
}

.count-value {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 备注区域样式 */
.remark-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.remark-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 提交按钮样式 */
.submit-btn {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 90rpx;
  background: linear-gradient(to right, #FF7A9E, #FF5777);
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 87, 119, 0.3);
  z-index: 100;
}

.submit-btn.disabled {
  background: linear-gradient(to right, #ccc, #bbb);
  box-shadow: none;
}

/* 加载中动画 */
@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}