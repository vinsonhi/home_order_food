.container {
  display: flex;
  height: 100vh;
}

.tab-bar {
  width: 25%;
  background-color: #f5f5f5;
}

.tab-item {
  padding: 20px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.tab-item.active {
  background-color: #fff;
  font-weight: bold;
}

.menu-list {
  width: 75%;
  padding: 10px;
}

.menu-item {
  margin-bottom: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
}

.menu-item image {
  width: 100%;
  height: 150px;
}

.menu-item .info {
  padding: 10px;
}

.menu-item .name {
  font-size: 16px;
  font-weight: bold;
}

.menu-item .price {
  color: #e64340;
  font-size: 14px;
}

.add-btn {
  margin: 10px;
  background-color: #e64340;
  color: #fff;
}

.cart-icon {
  position: fixed;
  right: 20px;
  bottom: 20px;
  background-color: #e64340;
  color: #fff;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
}

.cart-icon .count {
  position: absolute;
  top: -5px;
  right: -5px;
  background-color: #fff;
  color: #e64340;
  font-size: 12px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}